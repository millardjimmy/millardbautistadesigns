<%= form_for @project do |f| %>
    <%= f.hidden_field :lead_id, value: @curr_user.id%>
    <%= f.hidden_field :company_id, value: @curr_user.company.id%>
    Project Name: <%= f.text_field :name %>
    Description: <%= f.text_area :description %>
    Due Date: <%= f.date_select :due_date, default: Date.today %>
    <%= f.submit "Submit Project" %>
<% end %>